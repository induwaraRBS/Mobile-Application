<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup"
    >

    <ImageView
        android:src="@drawable/userpic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:id="@+id/user"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.9"
        android:background="@drawable/ic_google_pixel_6_pro___1"/> >

        <ImageButton
            android:id="@+id/bttnimagefb"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="540dp"
            android:layout_marginLeft="70dp"
            android:background="@drawable/fb"
            android:alpha="0.7"
             />

    <ImageButton
        android:id="@+id/bttnimagegoogle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="540dp"
        android:layout_marginLeft="150dp"
        android:background="@drawable/google"
        android:alpha="0.7"
        />

    <Button
        android:id="@+id/bttngotosignup"
        style="?borderlessButtonStyle"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="655dp"
        android:text="Already have an account?"
        />






    <Button
        android:id="@+id/bttnSignup"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_reenterpassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_backgrond"
        android:text="Sign up"
        android:textSize="20sp" />


    <EditText
        android:id="@+id/edt_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:ems="10"
        android:hint="Email"
        android:textColorHint="@color/texthint"
        android:inputType="textEmailAddress"
        android:textColor="@color/black" />
    <EditText
        android:id="@+id/edt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_email"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:ems="10"
        android:hint="Name"
        android:textColorHint="@color/texthint"
        android:inputType="textEmailAddress"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/edt_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shadowColor="@color/black"
        android:layout_below="@id/edt_name"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:hint="Password"
        android:textColorHint="@color/texthint"
        android:ems="10"
        android:textColor="@color/black"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/edt_reenterpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_password"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:ems="10"
        android:hint="Re-Enter password"
        android:textColorHint="@color/texthint"
        android:inputType="textPassword"
        android:textColor="@color/black" />





</RelativeLayout>